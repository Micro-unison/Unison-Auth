{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "paths": { "@/*": ["*"] },
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es2018",
    "lib": ["es2018"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
